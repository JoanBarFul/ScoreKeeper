<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ScoreText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display3</item>


    </style>

    <style name="TeamText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display3</item>


    </style>



    <style name="ScoreButtons" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/image_button_bg_selector</item>
        <item name="android:tint">@color/color_selector</item>
    </style>


    <style name="PlusButtons" parent="ScoreButtons">
        <item name="android:src">@drawable/ic_plus</item>
        <item name="android:contentDescription">@string/plus_button</item>
        <item name="android:text">@string/plus_button</item>
    </style>

    <style name="MinusButtons" parent="ScoreButtons">
        <item name="android:src">@drawable/ic_minus</item>
        <item name="android:contentDescription">@string/minus_button</item>
        <item name="android:text">@string/minus_button</item>
    </style>


    <string name="plus_button">+</string>
    <string name="minus_button">-\n</string>


</resources>